{
  "name": "repogate",
  "displayName": "RepoGate",
  "description": "Security gatekeeper for your project dependencies. Validates dependencies against vulnerabilities before installation.",
  "version": "1.10.1",
  "icon": "repogate_extension_icon.png",
  "publisher": "repogate",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:package.json",
    "workspaceContains:pom.xml",
    "workspaceContains:build.gradle",
    "workspaceContains:build.gradle.kts"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "dependency-management",
    "dependency-governance",
    "supply-chain-security",
    "software-supply-chain",
    "license-compliance",
    "policy-enforcement",
    "devsecops",
    "audit-trail",
    "continuous-compliance",
    "governance-as-code",
    "shift-left-security",
    "automation",
    "software-composition-analysis",
    "sca",
    "itsm",
    "servicenow",
    "jira",
    "security",
    "dependencies",
    "npm",
    "maven",
    "gradle",
    "vulnerability"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "RepoGate",
      "properties": {
        "repogate.authenticationStatus": {
          "type": "string",
          "default": "Not signed in",
          "description": "Current authentication status",
          "readOnly": true,
          "markdownDescription": "**Authentication Status**\n\nTo sign in or manage your account, open the **Command Palette** (`Ctrl+Shift+P` or `Cmd+Shift+P`) and search for:\n\n- `RepoGate: Sign In with EntraID` (Recommended)\n- `RepoGate: Sign In with API Token (Legacy)`\n- `RepoGate: Sign Out`\n- `RepoGate: Show Account Info`\n\n_Credentials are stored securely in VS Code SecretStorage (encrypted)_"
        },
        "repogate.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "error",
          "description": "Logging level for RepoGate output (use command to change)"
        }
      }
    },
    "commands": [
      {
        "command": "repogate.signInEntraID",
        "title": "RepoGate: Sign In with EntraID"
      },
      {
        "command": "repogate.signInAPIToken",
        "title": "RepoGate: Sign In with API Token (Legacy)"
      },
      {
        "command": "repogate.signOut",
        "title": "RepoGate: Sign Out"
      },
      {
        "command": "repogate.showAccountInfo",
        "title": "RepoGate: Show Account Info"
      },
      {
        "command": "repogate.setToken",
        "title": "RepoGate: Set API Token (Legacy)"
      },
      {
        "command": "repogate.clearToken",
        "title": "RepoGate: Clear Token (Legacy)"
      },
      {
        "command": "repogate.testConnection",
        "title": "RepoGate: Test Connection"
      },
      {
        "command": "repogate.scanNow",
        "title": "RepoGate: Scan Now"
      },
      {
        "command": "repogate.setApiUrl",
        "title": "RepoGate: Set API URL"
      },
      {
        "command": "repogate.setPollInterval",
        "title": "RepoGate: Set Poll Interval"
      },
      {
        "command": "repogate.toggleEnabled",
        "title": "RepoGate: Toggle Enabled/Disabled"
      },
      {
        "command": "repogate.toggleDevDependencies",
        "title": "RepoGate: Toggle Include Dev Dependencies"
      },
      {
        "command": "repogate.showOutput",
        "title": "RepoGate: Show Output"
      },
      {
        "command": "repogate.clearDiagnostics",
        "title": "RepoGate: Clear Diagnostics"
      },
      {
        "command": "repogate.setLogLevel",
        "title": "RepoGate: Set Log Level"
      },
      {
        "command": "repogate.seeViolations",
        "title": "RepoGate: See Current Violations"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SectorFlow/repogate-extention-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/SectorFlow/repogate-extention-vscode/issues"
  },
  "homepage": "https://github.com/SectorFlow/repogate-extention-vscode#readme",
  "license": "MIT"
}
